<section class="addRecipe col-12 col-md-8 col-lg-9 d-flex flex-lg-col flex-wrap justify-content-center">
	<form class="new-recipe-form">
		{{! <div id="name">
			<label for="yourName">Your Name</label><br>
			<textarea name="yourname" placeholder="Enter your name">
			</textarea>
			<br>
		</div> }}
		<div id="recipeName">
			<label for="recipeName">What is the name of your recipe?</label><br
			/>
			<textarea
				id="name"
				name="recipeName"
				placeholder="Your recipe name here"
				class="mt-1"
			>
				{{name}}
			</textarea>
		</div>
		<div id="recipeDescription" class="mt-3">
			<label for="recipeDescription">What is the description of your
				recipe?</label><br />
			<textarea
				id="description"
				name="recipeDescription"
				placeholder="Your recipe's description here"
			>
				{{description}}
			</textarea>
		</div>


		<div class="ingredient mt-3">
			<label>What are the ingredients? (amount, unit of measurement, then
				ingredient name)</label><br />
			<ol id="ingredient-list"></ol>
			<button
				id="addNewIngredient"
				onclick="addIngredientBox(event)"
			>Click to add ingredient</button>
		</div>


		<div class="instructions mt-3">
			<label for="instructions">Instructions</label><br />
			<textarea
				id="instructions"
				class="insText mt-1"
			>{{instructions}}</textarea>
		</div>

		<div class="meal mt-3">
			<p>What meal is this recipe for?</p>
			<label><input type="radio" name="meal" value="Breakfast" /> Breakfast</label><br />
			<label><input type="radio" name="meal" value="Lunch" /> Lunch</label><br />
			<label><input type="radio" name="meal" value="Dinner" /> Dinner</label>
		</div>

		<div class="addFile mt-3">
			<label for="myfile">Select a file:</label>
			<br />
			<input type="file" id="myfile" name="myfile" />
		</div>

		<div class="buttons mt-3">
			<input
				type="submit"
				value="Submit"
				onclick="newRecipeHandler(event)"
				class="btn btn-outline-success"
			/>
			<button class="clear">Clear Recipe</button>
		</div>
	</form>
</section>

<script src="/js/addrecipe.js"></script>