    <section class="recent-cards d-flex flex-row flex-wrap full-width">
        {{#each recentLunchRecipes as |recipe|}}
            {{> recipe-card}}
        {{/each}}
    </section>
    {{!-- For each dinner recipe, the 'recipe-card' partial is used to render the gallery data --}}
    <h2>Recent Dinner Recipes</h2>
    <section class="recent-cards d-flex flex-row flex-wrap full-width">
        {{#each recentDinnerRecipes as |recipe|}}
            {{> recipe-card}}
        {{/each}}
    </section>
</section>