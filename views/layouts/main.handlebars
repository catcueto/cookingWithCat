<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Recipe Finder</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat&family=Rubik&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" type="text/css" href="/css/style.css" />
  </head>

  <body>
    <header>
      <section class="d-flex flex-row justify-content-between m-3">
        <button class="newRecipeBtn"><a
            href="/api/addrecipe"
            class="textBtn"
          >ADD NEW RECIPE</a></button>
        <h1>Recipe Finder</h1>
        <div class="search-container">
          <form action="/search">
            <input type="text" placeholder="Search recipe" name="search" />
            <button class button type="submit">
              <i class="fa fa-search"></i>üîç
            </button>
          </form>
        </div>
      </section>
      <nav class="navbar navbar-dark d-flex">
        <section class="d-flex flex-row justify-content-around">
          <a href="/api/mealtime/breakfast">Breakfast</a>
          <a href="/api/mealtime/lunch">Lunch</a>
          <a href="/api/mealtime/dinner">Dinner</a>
        </section>
        <section class="d-flex flex-row justify-content-around">
          <a href="#">About</a>
          <a href="#">Contact</a>
          {{! <a href="#">Login</a> }}

          <!-- Conditionally render login or logout ahrefs -->
          {{#if logged_in}}
            <a href="/profile">Profile</a>
            |
            <button class="no-button" id="logout">Logout</button>
          {{else}}
            <a href="/login">Login</a>
          {{/if}}
        </section>
      </nav>
    </header>
    <hr class="b-solid black" />
    <main class="d-flex flex-column flex-md-row flex-lg-row">
      {{{body}}}
    </main>
    <footer>

    </footer>

    <!-- Renders script for logged in users only -->
    {{#if logged_in}}
      <script src="/js/logout.js"></script>
    {{/if}}
  </body>
</html>