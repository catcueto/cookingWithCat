<section class="addRecipe">
    <form>
        <div id="name">
            <label for="yourName">Your Name</label><br>
            <input type="text" name="yourname" placeholder="Enter your name"><br>
        </div>
        <div id="recipeName">
            <label for="recipeName">What is the name of your recipe?</label><br>
            <input type="text" name="recipeName" placeholder="Your recipe name here">
        </div>
        <div class="ingredients">
            <label for="ingredients">What are the ingredients? (amount, unit of measurement, then ingredient)</label><br>
            <input type="text" name="ingredients" placeholder="(amount, unit of measurement, ingredient)">
            <button class="deleteIngredient">ðŸ—‘</button><br>
            <button class="addNewIngredient">+</button>
        </div>
        <div class="instructions">
            <label for="instructions">Instructions</label><br>
            <textarea class="insText"></textarea>
        </div>
        <div class="meal">
            <p>What meal is his recipe for?</p>
            <input type="radio" name="meal" value="Breakfast">
            <label for="Breakfast">Breakfast</label><br>
            <input type="radio" name="meal" value="Lunch">
            <label for="Lunch">Lunch</label><br>
            <input type="radio" name="meal" value="Dinner">
            <label for="Dinner">Dinner</label>
        </div>
        <div class="addFile">
            <label for="myfile">Select a file:</label><br>
            <input type="file" id="myfile" name="myfile">
        </div>

        <div class="buttons">
            <button class="submit">Submit</button>
            <button class="clear">Clear Recipe</button>
        </div>
    </form> 
</section>